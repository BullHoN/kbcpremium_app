<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/categoryHeading"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Apointment"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="1 June 2020"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/black" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:id="@+id/dates"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/marrige"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_height="wrap_content">

            <TextView
                style="@style/subHeading"
                android:text="Total Seats(Per Day): 15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                style="@style/subHeading"
                android:text="Available Seats: 4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/item_text"
                android:textColor="@color/golden"
                android:text="There is no option for choosing time \n our team will call out to you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/timing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                style="@style/subHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/t9"
                    style="@style/appointbutton"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="9:00" />

                <Button
                    android:id="@+id/t10"
                    style="@style/appointbutton"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="10:00" />

                <Button
                    android:id="@+id/t11"
                    style="@style/appointbutton"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="11:00" />

                <Button
                    android:id="@+id/t12"
                    style="@style/appointbutton"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="12:00" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="18dp"
                style="@style/subHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afternoon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/t1"
                    style="@style/appointbutton"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="1:00" />

                <Button
                    android:id="@+id/t2"
                    style="@style/appointbutton"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="2:00" />

                <Button
                    android:id="@+id/t3"
                    style="@style/appointbutton"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="3:00" />

                <Button
                    android:id="@+id/t4"
                    style="@style/appointbutton"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="4:00" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="18dp"
                style="@style/subHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/t5"
                    style="@style/appointbutton"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="5:00" />

                <Button
                    android:id="@+id/t6"
                    style="@style/appointbutton"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="6:00" />

                <Button
                    android:id="@+id/t7"
                    style="@style/appointbutton"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="7:00" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Bill Details"
                style="@style/subHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="5dp"
                android:background="@color/golden" />

            <LinearLayout
                android:id="@+id/bill_items"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/golden" />

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:text="Total"
                    android:textSize="32sp"
                    style="@style/subHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/total"
                    android:gravity="end"
                    android:layout_weight="2"
                    android:text="$2000"
                    android:textSize="32sp"
                    style="@style/subHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                android:id="@+id/booking_button"
                android:textColor="@android:color/black"
                android:background="@color/categoryHeading"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:text="Book Seat"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="64dp"/>


    </LinearLayout>

</ScrollView>